<script src="https://code.jquery.com/jquery-3.5.0.js"></script>
<script language="javascript">
$(document)
.on("click","#submit",function(){
	if($("#username").val()==""){
		alert("아이디란을 공백으로 할수없습니다.");
		return false;
	}
	if($("#password").val()!=$("#passwordcheck").val()){
		alert("비밀번호를 다시한번 확인해주세요.");
		return false;
	}
	if($("#password").val()==""){
		alert("비밀번호란을 공백으로 할수없습니다.");
		return false;
	}
	if($("#passwordcheck").val()==""){
		alert("비밀번호 확인란을 공백으로 할수없습니다.");
		return false;
	}
	
	if($("#email").val()==""){
		alert("이메일란을 공백으로 둘수 없습니다.");
		return false;
	}
	
	$.ajax({
		  url:'InvalidAccount',//호출될 서블릿의 경로(이름)
		  method:'get',//데이터 전송방식 get/post
		  //전송할 데이터(쿼리스트링)//
		  data:'username='+$('input[name=username]').val(),
		  dataType:'text',//반환받을 데이터 타입 
		  beforeSend:function(){ 
		  },
		  success:function(txt){//호출 성공해서 완료하면 
			  if(txt=="0"){
				  console.log("id-debug")
				  alert("사용가능한 아이디입니다.")
				  alert("회원가입 되었습니다.")
				  return false;
				
			  }else{
				  alert("아이디가 중복됩니다.")
				  return false;
			  }
		  	
			
		},
		complete:function(){
			
		} 
	
	})
	$.ajax({
		  url:'UserCraete',//호출될 서블릿의 경로(이름)
		  method:'get',//데이터 전송방식 get/post
		  //전송할 데이터(쿼리스트링)//
		  data:'username='+$('input[name=username]').val()+'&password='+$('input[name=password]').val()+'&email='+$('input[name=email]').val(),
		  dataType:'text',//반환받을 데이터 타입 
		  beforeSend:function(){},
		  success:function(txt){//호출 성공해서 완료하면 
			  
		},
		complete:function(){
		
		} 
	    })
	
})




</script>
